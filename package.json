{
  "name": "template-nodets",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "npm run build && npm run watch",
    "build": "npm run build-sass && npm run build-ts && npm run copy-static-assets",
    "serve": "node dist/bin/www.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"nodemon dist/bin/www.js\"",
    "test": "jest --forceExit --coverage",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "build-sass": "node-sass src/public/css/main.scss dist/public/css/main.css",
    "watch-sass": "node-sass -w src/public/css/main.scss dist/public/css/main.css",
    "copy-static-assets": "node copyStaticAssets.js"
  },
  "jest": {
    "globals": {
      "__TS_CONFIG__": "tsconfig.json"
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "./node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/test/**/*.test.(ts|js)"
    ],
    "testEnvironment": "node"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "cookie-parser": "^1.4.3",
    "express": "^4.16.3",
    "lodash": "^4.17.10",
    "mongoose": "^5.2.4",
    "morgan": "^1.9.0",
    "nodemailer": "^2.6.4",
    "pug": "^2.0.3",
    "request": "^2.87.0"
  },
  "devDependencies": {
    "@types/async": "^2.0.40",
    "@types/body-parser": "^1.17.0",
    "@types/connect-mongo": "0.0.32",
    "@types/errorhandler": "0.0.30",
    "@types/express": "^4.0.35",
    "@types/express-session": "0.0.32",
    "@types/jest": "^19.2.2",
    "@types/jquery": "^2.0.41",
    "@types/lodash": "^4.14.63",
    "@types/mongodb": "^3.1.2",
    "@types/mongoose": "^5.2.1",
    "@types/morgan": "^1.7.35",
    "@types/node": "^10.5.2",
    "@types/nodemailer": "^4.6.2",
    "@types/request": "^2.47.1",
    "@types/supertest": "^2.0.0",
    "concurrently": "^3.4.0",
    "jest": "^19.0.2",
    "node-sass": "^4.5.2",
    "nodemon": "^1.11.0",
    "shelljs": "^0.7.7",
    "supertest": "^2.0.1",
    "ts-jest": "^19.0.8",
    "tslint": "^5.0.0",
    "typescript": "^2.2.2"
  }
}
